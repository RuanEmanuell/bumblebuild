generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model TokenRecuperacaoSenha {
  id         String   @id @default(uuid())
  token      String   @unique
  usuario    Usuario  @relation(fields: [usuarioId], references: [id])
  usuarioId  Int
  createdAt   DateTime @default(now())
  experiedAt  DateTime
}

model Usuario {
    id              Int                    @id @default(autoincrement())
    tipo_usuario    String
    nome            String
    email           String                 @unique
    senha           String
    status          Boolean                @default(true)
    createdAt       DateTime               @default(now())
    updatedAt       DateTime               @updatedAt

    tokensRecuperacao TokenRecuperacaoSenha[]
 }
  
model Peca {
  id        Int       @id @default(autoincrement())
  nome      String
  marca     String
  preco     Float
  tipo      TipoPeca
  imagemUrl String?
  createdAt DateTime  @default(now())

  linksPreco LinkPreco[]

  cpu       CPU?      @relation(name: "CPUToPeca")
  gpu       GPU?      @relation(name: "GPUToPeca")
  ram       RAM?      @relation(name: "RAMToPeca")
  ssd       SSD?      @relation(name: "SSDToPeca")
  fonte     Fonte?    @relation(name: "FonteToPeca")
  gabinete  Gabinete? @relation(name: "GabineteToPeca")
  placaMae  PlacaMae? @relation(name: "PlacaMaeToPeca")
  cooler    Cooler?   @relation(name: "CoolerToPeca")
}

model LinkPreco {
  id        Int      @id @default(autoincrement())
  url       String
  preco     Float?  
  atualizadoEm DateTime? 
  peca      Peca     @relation(fields: [pecaId], references: [id])
  pecaId    Int
}


enum TipoPeca {
  CPU
  GPU
  RAM
  SSD
  FONTE
  GABINETE
  PLACA_MAE
  COOLER
}

model CPU {
  id                 Int    @id
  socket             String
  nucleos            Int
  threads            Int
  frequencia         Float
  tdp                Int
  graficosIntegrados Boolean
  peca               Peca   @relation(name: "CPUToPeca", fields: [id], references: [id])
}

model GPU {
  id           Int    @id
  memoriaGB    Int
  tipoMemoria  String
  tdp          Int
  peca         Peca   @relation(name: "GPUToPeca", fields: [id], references: [id])
}

model RAM {
  id           Int    @id
  capacidadeGB Int
  tipo         String
  frequencia   Int
  peca         Peca   @relation(name: "RAMToPeca", fields: [id], references: [id])
}

model SSD {
  id           Int    @id
  capacidadeGB Int
  tipo         String
  leituraMBs   Int
  escritaMBs   Int
  peca         Peca   @relation(name: "SSDToPeca", fields: [id], references: [id])
}

model Fonte {
  id           Int    @id
  potenciaW    Int
  certificacao String
  modular      Boolean
  peca         Peca   @relation(name: "FonteToPeca", fields: [id], references: [id])
}

model Gabinete {
  id               Int    @id
  tamanhoSuportado String
  comVidro         Boolean
  peca             Peca   @relation(name: "GabineteToPeca", fields: [id], references: [id])
}

model Cooler {
  id            Int    @id
  tipo          String
  suporteSocket String
  peca          Peca   @relation(name: "CoolerToPeca", fields: [id], references: [id])
}

model PlacaMae {
  id       Int    @id
  socket   String
  tipoRAM  String
  slotsRAM Int
  maxRAM   Int
  tamanho  String
  peca     Peca   @relation(name: "PlacaMaeToPeca", fields: [id], references: [id])
}

model Montagem {
  id              Int       @id @default(autoincrement())
  usuarioId       Int
  cpuId           Int
  gpuId           Int
  placaMaeId      Int
  ramId           Int
  fonteId         Int
  ssdId           Int
  gabineteId      Int
  quantidadeRAM   Int
  quantidadeSSD   Int
  dataMontagem    DateTime @default(now())

  usuario         Usuario   @relation(fields: [usuarioId], references: [id])
  cpu             Peca      @relation(fields: [cpuId], references: [id])
  gpu             Peca      @relation(fields: [gpuId], references: [id])
  placaMae       Peca      @relation(fields: [placaMaeId], references: [id])
  ram             Peca      @relation(fields: [ramId], references: [id])
  fonte           Peca      @relation(fields: [fonteId], references: [id])
  ssd             Peca      @relation(fields: [ssdId], references: [id])
  gabinete        Peca      @relation(fields: [gabineteId], references: [id])
}